{
  "name": "constellation-jeg-backend",
  "version": "1.0.0",
  "description": "Constellation - Just Enough Governance",
  "main": "public/index.js",
  "directories": {
    "test": "test"
  },
  "homepage": "https://bitbucket.org/chaione/constellation-jeg#readme",
  "scripts": {
    "clean": "rimraf ./dist/*",
    "tsc": "tsc",
    "build-backend": "npm-run-all clean tsc",
    "dev:start-backend": "npm-run-all build start",
    "dev-backend": "nodemon --watch microservices -e ts --exec npm run dev:start-backend",
    "start-backend": "node dist/src/index.js",
    "test-backend": "jest --verbose --coverage --ci --silent --colors",
    "migrate": "npx sequelize-cli db:migrate",
    "migrate:undo": "npx sequelize-cli db:migrate:undo",
    "seed": "npx sequelize-cli db:seed:all",
    "seed:undo": "npx sequelize-cli db:seed:undo",
    "start-frontend": "react-scripts start",
    "build-frontend": "react-scripts build",
    "test-frontend": "react-scripts test"
  },
  "jest-junit": {
    "outputDirectory": "./coverage/junit"
  },
  "author": "ChaiOne",
  "license": "ISC",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "prettier --single-quote --write",
      "eslint --ext js,jsx,ts,tsx --max-warnings 0",
      "tsc --skipLibCheck --noEmit -esModuleInterop true --target es2020 --resolveJsonModule --moduleResolution node",
      "git add"
    ]
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "nodemon": "^2.0.19"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.3.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/axios": "^0.14.0",
    "@types/cors": "^2.8.12",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^28.1.7",
    "@types/node": "^18.7.5",
    "@types/react": "^18.0.17",
    "@types/react-dom": "^18.0.6",
    "@types/react-redux": "^7.1.24",
    "@types/react-router": "^5.1.18",
    "@types/react-router-dom": "^5.3.3",
    "@types/redux-mock-store": "^1.0.3",
    "@types/redux-thunk": "^2.1.0",
    "@types/sequelize": "^4.28.14",
    "@typescript-eslint/eslint-plugin": "^5.33.1",
    "@typescript-eslint/parser": "^5.33.1",
    "browserify": "^17.0.0",
    "eslint": "^8.22.0",
    "eslint-plugin-react": "^7.30.1",
    "husky": "^8.0.1",
    "jest": "^28.1.3",
    "jest-environment-jsdom": "^28.1.3",
    "jest-junit": "^14.0.0",
    "lint-staged": "^13.0.3",
    "moment": "^2.29.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^8.0.2",
    "react-router": "^6.3.0",
    "react-router-dom": "^6.3.0",
    "react-scripts": "^5.0.1",
    "react-test-renderer": "^18.2.0",
    "redux": "^4.2.0",
    "redux-devtools-extension": "^2.13.9",
    "redux-mock-store": "^1.5.4",
    "redux-oidc": "^4.0.0-beta1",
    "redux-thunk": "^2.4.1",
    "rimraf": "^3.0.2",
    "sequelize-cli": "^6.4.1",
    "sequelize-mock": "^0.10.2",
    "ts-jest": "^28.0.8",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tslint": "^6.1.3",
    "typescript": "^4.7.4",
    "web-vitals": "^2.1.4"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
